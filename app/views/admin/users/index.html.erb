<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header">Users List
      <%= link_to "Add user", new_admin_user_path, :class => "btn btn-default pull-right" %>
    </h3>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>编号</th>
        <th>用户名</th>

        <th>邮箱</th>
        <th></th>

      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>

            <td><%= user.email %></td>
            <td><%= link_to "修改",edit_admin_user_path(user) %></td>
            <td><%= link_to "删除",admin_user_path(user),
                            :method=>:delete, :data=>{:confirm => "Sure?"}
            %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>