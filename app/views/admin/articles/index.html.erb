<div class="container">
  <div class="col-lg-12">
    <h3 class="page-header">文章列表
      <%= link_to "添加文章", new_admin_article_path, :class => "btn btn-default pull-right" %>
    </h3>
  </div>
</div>
<div class="container">
  <div class="col-lg-12">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>编号</th>
        <th>标题</th>

        <th>添加时间</th>
        <th>操作</th>

      </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
        <tr>
          <td><%= article.id %></td>
          <td><%= link_to  article.title, admin_article_path(article)  %></td>

          <td><%= article.created_at %></td>
          <td><%= link_to "编辑",edit_admin_article_path(article), :class=>"btn btn-info" %></td>
          <td><%= link_to "删除",admin_article_path(article), :class=>"btn btn-danger",
                  :method=>:delete, :data=>{:confirm => "确定要删除吗?"}
          %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="page">
      <%= paginate @articles %>
    </div>
  </div>
</div>